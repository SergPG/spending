<section class="py-2">

<div class="container px-5 my-3"> 
    <div class="row gx-5 ">
      <div class="col">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Expenses", expenses_path %>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Shared</li>
        </ol>
      </nav>
   
          <div class="card shadow">

            <div class="card-header shadow">
              <div class="container">
                <div class="row align-items-center">
                  <div class="col">
                    Shared spendings
                  </div>
                </div>
              </div>
            </div> 
            <%# END .card-header %>

            <div class="card-body">         
              <div class="container">
                <div class="row align-items-center">
                  <div class="col">
                
                          <table class="table text-center">
                            <thead>
                              <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Category</th>
                              </tr>
                            </thead>
                            <tbody>
                             
                    <% shared_expenses.each do  |user, expenses| %>  
                        <tr>
                          <th scope="row" colspan="3" class="table-light"> <%= user.login %> </th>
                        </tr>  
                        <%  expenses.each do | expense | %>

                            <tr>
                              <td><%= expense.decorate.updated_at_format %></td>
                              <td><%= expense.decorate.amount_money_format %></td>
                              <td><%= expense.category.name %></td>
                            </tr>

                        <% end %>
                    <% end %>           
                            </tbody>
                          </table>
      
                  </div>
                </div>
              </div>
            </div>
            <%# END .card-body %>
            <div class="card-footer text-muted"> </div>           
          </div>
          <%# END .card %>

      </div>   
    </div>
  </div>
  </section>
